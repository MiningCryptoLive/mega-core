# ===========================================
# SIGS MEGA CORE - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ===========================================
# DEPLOYMENT MODE
# ===========================================
# Set to 'all-in-one', 'pool-only', or 'services-only'
DEPLOYMENT_MODE=all-in-one

# For services-only deployment, set the IP of the pool server
POOL_SERVER_IP=

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=miningcore
POSTGRES_USER=miningcore
POSTGRES_PASSWORD=changeme123
POSTGRES_PORT=5432

# Database replication (for remote access from services server)
REPLICATION_USER=replicator
REPLICATION_PASSWORD=replicator123

# ===========================================
# ERGO NODE CONFIGURATION
# ===========================================
# URL/IP of your Ergo full node
ERGO_NODE_HOST=host.docker.internal
ERGO_NODE_PORT=9053

# ===========================================
# MINING POOL CONFIGURATION
# ===========================================
# Instance ID for this pool
INSTANCE_ID=public

# Stratum mining ports (non-SSL)
STRATUM_PORT_1=4444
STRATUM_PORT_2=5555

# Stratum SSL ports
STRATUM_SSL_PORT_1=7777
STRATUM_SSL_PORT_2=8888

# Miningcore API port (internal)
MININGCORE_API_PORT=4000

# ===========================================
# DOCKER IMAGE CONFIGURATION
# ===========================================
# Use pre-built images or build locally
# Leave empty to build from local source
MININGCORE_IMAGE=ghcr.io/marctheshark3/ergo-miningcore:latest
MINING_WAVE_IMAGE=ghcr.io/marctheshark3/mining-wave:latest
NURSE_SHARK_BOT_IMAGE=ghcr.io/marctheshark3/nurse-shark-bot:latest

# ===========================================
# MINING WAVE API CONFIGURATION
# ===========================================
MINING_WAVE_PORT=8000
MINING_WAVE_REDIS_URL=redis://redis:6379/0
MINING_WAVE_DEBUG=false
MINING_WAVE_ALLOWED_ORIGINS=

# ===========================================
# NGINX CONFIGURATION
# ===========================================
HTTP_PORT=80
HTTPS_PORT=443

# ===========================================
# GENERAL CONFIGURATION
# ===========================================
TZ=UTC
